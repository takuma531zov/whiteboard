rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // ユーザーコレクションのルール
    match /users/{userId} {
      allow read, write: if request.auth != null;
    }
    
    // タスクコレクションのルール
    match /tasks/{taskId} {
      allow read, write: if request.auth != null;
    }
    
    // 期限切れレポートコレクションのルール（読み取り専用）
    match /overdueReports/{reportId} {
      allow read: if request.auth != null;
      allow write: if false; // Functions経由でのみ書き込み可能
    }
  }
}